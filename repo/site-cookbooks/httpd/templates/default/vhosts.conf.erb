SetEnv FUEL_ENV development

Alias /fuel_template "/var/www/applications/fuel_template/current/src/public"
Alias /codeignitertest "/var/www/applications/codeignitertest"
Alias /eccubetest "/var/www/applications/eccubetest"


<Directory /var/www/applications/fuel_template/current/src/public>
  Options All
  AllowOverride All

  Order allow,deny
  Allow from all
</Directory>

<Directory /var/www/applications/codeignitertest>
  Options All
  AllowOverride All

  Order allow,deny
  Allow from all
</Directory>

<Directory /var/www/applications/eccubetest>
  Options All
  AllowOverride All

  Order allow,deny
  Allow from all
</Directory>

<VirtualHost *:80>
  ServerName mysql.fumiaki.org

  DocumentRoot /usr/share/phpMyAdmin

  <Directory /usr/share/phpMyAdmin>
    AllowOverride All

    Order allow,deny
    Allow from all
  </Directory>
</VirtualHost>